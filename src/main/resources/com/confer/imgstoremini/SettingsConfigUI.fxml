<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.confer.imgstoremini.controllers.SettingsConfigUIController">
   <stylesheets>
      <URL value="@styles/dark-theme.css" />
   </stylesheets>
   <children>
      <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <content>
            <VBox alignment="TOP_CENTER" spacing="15.0">
               <children>
                  <!-- Page Size Section -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Page Size:" HBox.hgrow="ALWAYS" />
                        <Spinner fx:id="pageSizeSPN" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <!-- Region Cuts Section -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Region Cuts:" HBox.hgrow="ALWAYS" />
                        <Spinner fx:id="regioncutsSPN" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <!-- K Means Iterations Section -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="K Means Iterations:" HBox.hgrow="ALWAYS" />
                        <Spinner fx:id="kmeansSPN" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <!-- Mean Shift Iterations Section -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Mean Shift Iterations:" HBox.hgrow="ALWAYS" />
                        <Spinner fx:id="meanshiftSPN" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <!-- Spectral Clustering Iterations Section -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Spectral Clustering Iterations:" HBox.hgrow="ALWAYS" />
                        <Spinner fx:id="spectralSPN" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <!-- Mean Shift Convergence Section -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Mean Shift Convergence:" HBox.hgrow="ALWAYS" />
                        <Spinner fx:id="meanShiftConvergenceSPN" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <!-- Preferred Processor Section -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Preferred Processor:" HBox.hgrow="ALWAYS" />
                        <ChoiceBox fx:id="processorChoiceBox" prefWidth="150.0" />
                     </children>
                  </HBox>

                  <!-- Select Default DB Section -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Button fx:id="selectDefaultBTN" mnemonicParsing="false" onAction="#buttonClick" text="Select Default DB" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="selectedDefaultTxtField" disable="true" prefHeight="25.0" prefWidth="356.0" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <!-- New DB Section -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Button fx:id="newdbBTN" mnemonicParsing="false" onAction="#buttonClick" text="New DB" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="dbNameTxtField" prefHeight="25.0" prefWidth="412.0" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <!-- Save/Cancel Buttons Section -->
                  <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Button fx:id="saveBTN" mnemonicParsing="false" onAction="#buttonClick" text="Save" HBox.hgrow="ALWAYS" />
                        <Button fx:id="cancelBTN" mnemonicParsing="false" onAction="#buttonClick" text="Cancel" HBox.hgrow="ALWAYS" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.confer.imgstoremini.controllers.SettingsConfigUIController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="10.0">
         <children>
            <HBox alignment="TOP_CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Page Size:" />
                  <Spinner fx:id="pageSizeSPN" />
               </children>
            </HBox>
            <HBox spacing="10.0"  VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="selectDefaultBTN" mnemonicParsing="false" onAction="#buttonClick" text="Select Default DB" />
                  <TextField fx:id="selectedDefaultTxtField" disable="true" prefHeight="25.0" prefWidth="356.0" />
               </children>
            </HBox>
            <HBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="newdbBTN" mnemonicParsing="false" onAction="#buttonClick" text="New DB" />
                  <TextField fx:id="dbNameTxtField" prefHeight="25.0" prefWidth="412.0" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" spacing="10.0"  VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="saveBTN" mnemonicParsing="false" onAction="#buttonClick" text="Save" />
                  <Button fx:id="cancelBTN" mnemonicParsing="false" onAction="#buttonClick" text="Cancel" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
